<h3>User Profile</h3>
<p>Name: <%= @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>

<% @user.performed_actions.each do |p_action| %>
  <%= p_action.action_item.name %> / 
<% end %>

<% @user.unlocked_achievements.each do |achievement| %>
  <%= achievement.name %> / 
<% end %>

<% if user_signed_in? and current_user == User.find(params[:id]) %>
  <%= link_to "Edit", edit_user_path(@user) %>
<% end %>
