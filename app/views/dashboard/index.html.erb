<div class="content">
	<div class="page-header">
		<h1>Dashboard <small>Report your daily actions</h1>
		</div>
		<div class="row">
			<div class="span10">
				<% if flash[:notice] %>
				<div class="alert-message warning">
					<a class="close" href="#">×</a>
					<p><%= flash[:notice]%></p>
				</div>
				<% end %>

				<% if flash[:achievements] %>
				<div class="alert-message success">
					<a class="close" href="#">×</a>
					<p><%= flash[:achievements] %></p>
				</div>
				<% end %>
				
				<h3>Click on what you did today</h3>
				
				<%= render @action_groups %>
				
				<%= render current_user.action_cart %>				

			</div>
			<div class="span4">
				<%= render :partial => 'sidebar', :locals => {:user => @current_user} %>
			</div>
		</div>
	</div>
</div>